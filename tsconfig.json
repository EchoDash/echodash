{
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["DOM", "DOM.Iterable", "ES2020"],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"declaration": false,
		"outDir": "./assets/dist/",
		"rootDir": "./assets/src/",
		"baseUrl": "./",
		"paths": {
			"@/*": ["./assets/src/*"]
		}
	},
	"include": ["assets/src/**/*"],
	"exclude": ["node_modules", "assets/dist", "vendor"]
}
