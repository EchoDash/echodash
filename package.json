{
  "name": "echodash",
  "version": "1.0.0",
  "description": "EchoDash WordPress Plugin - React Admin Interface",
  "main": "index.js",
  "sideEffects": [
    "*.css",
    "*.scss",
    "*.sass"
  ],
  "scripts": {
    "build": "wp-scripts build",
    "build:analyze": "ANALYZE_BUNDLE=true npm run build",
    "start": "wp-scripts start",
    "dev": "wp-scripts start",
    "check-engines": "wp-scripts check-engines",
    "check-licenses": "wp-scripts check-licenses",
    "format": "wp-scripts format",
    "lint:css": "wp-scripts lint-style",
    "lint:js": "wp-scripts lint-js",
    "lint": "npm run lint:js && npm run lint:css",
    "packages-update": "wp-scripts packages-update",
    "plugin-zip": "wp-scripts plugin-zip",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern='.*\\.test\\.(js|jsx|ts|tsx)$'",
    "test:integration": "jest --testPathPattern='assets/tests/integration'",
    "test:performance": "jest --testPathPattern='assets/tests/performance'",
    "test:e2e": "wp-scripts test-e2e",
    "test:visual": "playwright test --config=tests/visual/playwright.config.ts",
    "test:visual:update": "playwright test --config=tests/visual/playwright.config.ts --update-snapshots",
    "test:visual:ui": "playwright test --config=tests/visual/playwright.config.ts --ui",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:ci": "jest --ci --coverage --reporters=default --reporters=jest-junit"
  },
  "keywords": [
    "wordpress",
    "plugin",
    "react",
    "typescript",
    "event-tracking",
    "analytics"
  ],
  "author": "Very Good Plugins",
  "license": "GPL-3.0+",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.1.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/pixelmatch": "^5.2.6",
    "@types/pngjs": "^6.0.5",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@wordpress/scripts": "^26.19.0",
    "babel-jest": "^29.7.0",
    "compression-webpack-plugin": "^10.0.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-html-reporters": "^3.1.0",
    "jest-junit": "^16.0.0",
    "jest-watch-typeahead": "^2.2.0",
    "pixelmatch": "^5.3.0",
    "pngjs": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.3.0",
    "webpack-bundle-analyzer": "^4.9.0"
  },
  "dependencies": {
    "@types/react-router-dom": "^5.3.3",
    "@wordpress/api-fetch": "^6.44.0",
    "@wordpress/components": "^25.13.0",
    "@wordpress/element": "^5.24.0",
    "@wordpress/i18n": "^4.47.0",
    "clsx": "^2.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.7.1",
    "yup": "^1.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
